<%= link_to 'Adicionar peso', weights_path %><br />
<%= link_to 'Sair', logout_path %><br />

<div id="user_data">
  meus dados<br/>
  <%= label_tag :name, 'nome: ' %>
  <%= text_field_tag :name, @user.name, :class => 'labelified', :read_only => true %>
  <br/>
  <%= label_tag :email, 'e-mail: ' %>
  <%= text_field_tag :email, @user.email, :class => 'labelified', :read_only => true %>
  <br/>
  <%= label_tag :height, 'altura (cm): ' %>
  <%= text_field_tag :height, @user.height, :class => 'labelified', :read_only => true %>
  <br/>
  <%= label_tag :meta, 'meta (kg): ' %>
  <%= text_field_tag :meta, @user.meta, :class => 'labelified', :read_only => true %>
  <br/>
  <%= label_tag :date, 'data: ' %>
  <%= text_field_tag :date, @user.date, :class => 'labelified', :read_only => true, :value => @user.date ? @user.date.strftime('%d/%m/%Y') : '' %>

</div>
<div id="user_weight">
  meu peso
  <table>
    <tr>
      <th>data</th>
      <th>peso</th>
      <th>imc</th>
    </tr>
    <% @weights.each do |weight| %>
        <tr>
          <td><%= weight.date.strftime('%d/%m/%Y') %></td>
          <td><%= weight.weight %></td>
          <td><%= '%.3f' % (weight.weight / (@user.height.to_f ** 2 / 10000)) %></td>
        </tr>
    <% end %>
  </table>
</div>
<div id="graphic">
  evolução x meta <br/>
  <!-- img src="http://www.cssdrive.com/imagesdir/logo.png" width="740" height="300" -->
</div>